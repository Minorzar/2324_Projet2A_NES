library ieee;
use ieee.std_logic_1164.all;

entity SignalToVariable is
    port (
        input_signal : in std_logic;
        output_signal : out std_logic
    );
end entity SignalToVariable;

architecture Behavioral of SignalToVariable is
    -- Declare a variable
    variable var1 : std_logic;

begin
    -- Assign the value of input_signal to var1
    var1 := input_signal;

    -- Use var1 for further processing, for example, assign it to an output signal
    output_signal <= var1;

end architecture Behavioral;